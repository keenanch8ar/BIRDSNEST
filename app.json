{
  "expo": {
    "name": "BIRDSNEST",
    "slug": "birdsnest-project",
    "privacy": "public",
    "sdkVersion": "38.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/playstore.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.kyutech.birdsnestproject.ios",
      "config": {
        "googleMapsApiKey": "${GOOGLE_MAPS_API_KEY_IOS}"
      },
      "icon": "./assets/images/Appstore_logo_black.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need to know your current location to determine the satellite's relative position to you. Do you allow us to use location service on this device?"
      },
      "supportsTablet": false
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "kyutech",
            "project": "birdsnest",
            "authToken": "${SENTRY_AUTH_TOKEN}"
          }
        }
      ]
    },
    "android": {
      "package": "com.kyutech.birdsnestproject",
      "config": {
        "googleMaps": {
          "apiKey": "${GOOGLE_MAPS_API_KEY_ANDROID}"
        }
      },
      "versionCode": 5,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    }
  }
}
